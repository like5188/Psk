<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bleScanInfo"
            type="com.psk.shangxiazhi.data.model.BleScanInfo" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/AppCardView.Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{bleScanInfo.name}"
                android:textAppearance="@style/AppSubtitle2"
                tools:text="xxx" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="end"
                android:text="@{bleScanInfo.address}"
                android:textAppearance="@style/AppBody2"
                tools:text="xx:xx:xx:xx:xx:xx" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>






