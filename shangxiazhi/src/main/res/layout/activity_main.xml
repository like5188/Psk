<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg">

        <ImageView
            android:id="@+id/ivAutonomyTraining"
            android:layout_width="285dp"
            android:layout_height="260dp"
            android:scaleType="fitXY"
            android:src="@drawable/shape_main_game_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivMedicalOrderTraining"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivMedicalOrderTraining"
            android:layout_width="285dp"
            android:layout_height="260dp"
            android:scaleType="fitXY"
            android:src="@drawable/shape_main_history_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivTrainingRecords"
            app:layout_constraintStart_toEndOf="@id/ivAutonomyTraining"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivTrainingRecords"
            android:layout_width="285dp"
            android:layout_height="260dp"
            android:scaleType="fitXY"
            android:src="@drawable/shape_main_history_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivMedicalOrderTraining"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:text="自主训练"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ivAutonomyTraining"
            app:layout_constraintEnd_toEndOf="@id/ivAutonomyTraining" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:text="医嘱训练"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ivMedicalOrderTraining"
            app:layout_constraintEnd_toEndOf="@id/ivMedicalOrderTraining" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:text="训练记录"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ivTrainingRecords"
            app:layout_constraintEnd_toEndOf="@id/ivTrainingRecords" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>