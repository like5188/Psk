<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Global color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/color_on_error</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="android:statusBarColor">@color/color_status_bar</item>
        <item name="colorBgOnCard">@color/color_bg_on_card</item>
        <!-- Button widget style attribute -->
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="materialButtonToggleGroupStyle">@style/AppToggleGroup</item>
        <!-- Card widget style attribute -->
        <item name="materialCardViewStyle">@style/AppCardView</item>

        <item name="android:windowBackground">@drawable/main_bg</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.App">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppEditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/AppBody2</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="iconTint">@color/button_text_color</item>
        <item name="rippleColor">@color/button_ripple_color</item>
    </style>

    <style name="AppToggleGroup" parent="Widget.MaterialComponents.MaterialButtonToggleGroup">
        <item name="singleSelection">true</item>
        <item name="selectionRequired">true</item>
    </style>

    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorOnPrimary</item>
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="AppCardView.Item">
        <item name="shapeAppearance">?attr/shapeAppearanceLargeComponent</item>
    </style>

</resources>