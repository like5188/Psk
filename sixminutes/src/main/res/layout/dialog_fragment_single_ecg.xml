<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.psk.ecg.DynamicEcgView
            android:id="@+id/ecgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tvLeadsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="#FF0000"
                android:textSize="24sp"
                tools:text="Ⅰ" />

            <TextView
                android:id="@+id/tvMmPerS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:textSize="24sp"
                tools:text="25 mm/s" />

            <Button
                android:id="@+id/btnMmPerS0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="增加"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnMmPerS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="减少"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvMmPerMv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:textSize="24sp"
                tools:text="10mm/mV" />

            <Button
                android:id="@+id/btnMmPerMv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="增加"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnMmPerMv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="减少"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGridSize0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="放大"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnGridSize1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="缩小"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>
</layout>