<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="生成PDF文件" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重新设置心电图参数" />

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.psk.ecg.StaticEcgView
                    android:id="@+id/ecgChartView"
                    android:layout_width="match_parent"
                    android:layout_height="200px" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="1"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="2"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="3"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="4"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="5"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="6"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="7"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="8"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv9"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="9"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv10"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="10"
                    android:textSize="30sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@color/common_text_red_0" />

                <!--
                    ScrollView 嵌套 RecyclerView 时，RecyclerView 必须被 RelativeLayout 包裹（否则 RecyclerView 在界面上无法显示完全）
                    RecyclerView 设置 android:descendantFocusability="blocksDescendants" 属性，是为了避免界面一启动就滚动到了 RecyclerView 的位置。
                -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@color/common_text_red_0" />

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv11"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="11"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv12"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="12"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv13"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="13"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv14"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="14"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv15"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="15"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv16"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="16"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv17"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="17"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv18"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="18"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv19"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="19"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv20"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="20"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv21"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="21"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv22"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="22"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv23"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="23"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv24"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="24"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv25"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="25"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv26"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="26"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv27"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="27"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv28"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="28"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv29"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="29"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv30"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:text="30"
                        android:textSize="30sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@color/common_text_red_0" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>